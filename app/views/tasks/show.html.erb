<h1>id=<%= @task.id %>のタスク詳細ページ</h1>

<table class="table table-borded">
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>タスク内容</th>
    <td> <%= @task.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
  
</table>


<%= link_to '一覧に戻る', tasks_path %>
<%= link_to 'このタスクを編集する', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to 'このタスクを消去する', @task, method: :delete,data: { confirm:'本当に排除してもよろしいでしょうか?'}, class: 'btn btn-danger' %>